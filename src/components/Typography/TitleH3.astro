---
interface Props {
  title: string;
  marginBottom?: number;
}

const { title, marginBottom } = Astro.props;

const margenInferior = marginBottom !== undefined ? `${marginBottom}px` : '0';
---

<h3 style={`margin-bottom: ${margenInferior}`}>
  {title}
</h3>

<style>
  h3 {
    font-size: 18px;
    font-weight: 400;
    margin-top: 0;
  }
</style>
