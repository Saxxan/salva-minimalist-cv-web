---
// Data
import { education } from "../../../en/cv.json";

// UI
import StandardSection from "../../ui/StandardSection.astro";
import ColumnCardsWrapper from "../../ui/ColumnCardsWrapper.astro";
import JobCard from "../../ui/JobCard.astro";
---

<StandardSection title="Education">
  <ColumnCardsWrapper>
    {
      education.map(
        ({ institution, url, startDate, endDate, studyType, area }) => (
          <JobCard
            name={institution}
            url={url}
            start={startDate}
            end={endDate}
            position={studyType}
            summary={area}
          />
        )
      )
    }
  </ColumnCardsWrapper>
</StandardSection>
