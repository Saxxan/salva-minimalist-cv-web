---
// Typography
import TitleH3 from "../Typography/TitleH3.astro";
import TitleH4 from "../Typography/TitleH4.astro";
import Text13 from "../Typography/Text13.astro";

const { name, description, url, roles, technologies } = Astro.props;
const rol = roles.join(", ");
---

<article>
  <a href={url}>
    <header>
      <TitleH3 title={name} marginBottom={5} />
      <svg
        class="icon"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
      >
        <path
          d="M14 3V5H17.59L7.76 14.83L9.17 16.24L19 6.41V10H21V3M19 19H5V5H12V3H5C3.89 3 3 3.9 3 5V19C3 19.5304 3.21071 20.0391 3.58579 20.4142C3.96086 20.7893 4.46957 21 5 21H19C19.5304 21 20.0391 20.7893 20.4142 20.4142C20.7893 20.0391 21 19.5304 21 19V12H19V19Z"></path>
      </svg>
    </header>

    <TitleH4 title={rol} />
    <Text13 text={description} />
    <ul>
      {technologies.map((tech: string) => <li>{tech}</li>)}
    </ul>
  </a>
</article>

<style>
  article {
    padding: 10px;
    border: 1px solid var(--bg-2);
    border-radius: 4px;

    &:hover {
      border-color: var(--text-light);

      .icon {
        display: block;
      }
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;

      .icon {
        display: none;
      }
    }

    a {
      text-decoration: none;
      color: inherit;
      border: 0;

      ul {
        list-style: none;
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        padding: 0;
        margin: 0;

        li {
          padding: 3px 8px;
          border-radius: 4px;
          text-align: center;
          background-color: var(--bg-2);
          font-size: 13px;
        }
      }
    }
  }
</style>
