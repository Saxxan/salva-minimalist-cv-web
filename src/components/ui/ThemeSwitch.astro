<div class="switch">
	<input id="switch-theme" class="switch__input" name="switch-theme" type="checkbox">
	<label class="switch__label" for="switch-theme"></label>
</div>

<style lang="scss">
    $dark: rgba(32,32,32);
	$light: rgba(255,255,255);

    .switch {
		position: relative;

		&__input {
			position: absolute;
			top: 0;
			right: 0;
			left: 0;
			bottom: 0;
			width: 100%;
			height: 100%;
			margin: 0;
			opacity: 0;
			z-index: 1;
			cursor: pointer;
		}

		&__label {
			display: block;
			position: relative;
			width: 40px;
			height: 25px;
			background-color: $dark;
			border-radius: 15px;
			transition: 0.4s;
            cursor: pointer;
            font-family: 'Material Icons';

			&::before {
				display: flex;
				align-items: center;
				justify-content: center;
				position: absolute;
				top: 0;
				right: auto;
				left: 0;
				bottom: 0;
				width: 25px;
				height: 25px;
				border-radius: 100%;
				border: 2px $dark solid;
				background-color: $light;
				color: $dark;
				transition: 0.4s;
				content: "\e518";
				font-size: 15px;
				font-weight: 900;
				box-sizing: border-box;
			}
		}

		&__input:checked + .switch__label {
			background-color: $light;

			&::before {
				left: calc(100% - 25px);
				border-color: $light;
				background-color: $dark;
				color: $light;
				content: "\e51c";
			}
		}
	}
</style>

<script>
    const switchTheme = document.getElementById('switch-theme') as HTMLInputElement;
    const body = document.body as HTMLBodyElement;

    /**
     * Funci√≥n para cambiar el tema de la web
     */
    function setTheme() {
        if (switchTheme?.checked) {
            body.classList.add('dark');
        } else {
            body.classList.remove('dark');
        }
    }

    switchTheme?.addEventListener('change', setTheme);
</script>