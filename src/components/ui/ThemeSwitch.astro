<div class="switch">
  <input
    id="switch-theme"
    class="switch__input"
    name="switch-theme"
    type="checkbox"
  />
  <label class="switch__label" for="switch-theme"></label>
</div>

<style lang="scss">
  .switch {
    position: relative;

    &__input {
      position: absolute;
      top: 0;
      right: 0;
      left: 0;
      bottom: 0;
      width: 100%;
      height: 100%;
      margin: 0;
      opacity: 0;
      z-index: 1;
      cursor: pointer;
    }

    &__label {
      display: block;
      position: relative;
      width: 40px;
      height: 25px;
      background-color: var(--text);
      border-radius: 15px;
      transition: 0.4s;
      cursor: pointer;
      font-family: "Material Icons";

      &::before {
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        top: 0;
        right: auto;
        left: 0;
        bottom: 0;
        width: 25px;
        height: 25px;
        border-radius: 100%;
        border: 2px var(--text) solid;
        background-color: var(--bg);
        color: var(--text);
        transition: 0.4s;
        content: "\e518";
        font-size: 15px;
        font-weight: 900;
        box-sizing: border-box;
      }
    }

    &__input:checked + .switch__label {
      background-color: var(--text);

      &::before {
        left: calc(100% - 25px);
        border-color: var(--text);
        background-color: var(--bg);
        color: var(--text);
        content: "\e51c";
      }
    }
  }
</style>

<script>
  import { setTheme } from "../../utils/utils";

  const switchTheme = document.getElementById(
    "switch-theme",
  ) as HTMLInputElement;

  switchTheme?.addEventListener("change", setTheme);
</script>
